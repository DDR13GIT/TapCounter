<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.TapCounter.AppWidget.Container"
    android:theme="@style/Base.Theme.TapCounter.AppWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <!-- Header bar -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingVertical="10dp"
        android:paddingHorizontal="12dp"

        android:background="@drawable/back">

        <!-- Counter title with blue outline as shown in screenshot -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#888888"
            android:text="Counter"
            android:textSize="16sp" />

        <!-- Icons layout exactly as in screenshot -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!-- Minus icon in circle -->
            <ImageView
                android:id="@+id/btnMinus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/icon_background"
                android:src="@drawable/ic_minus"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Decrease counter" />

            <!-- Refresh icon -->
            <ImageView
                android:id="@+id/btnReset"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/icon_background"
                android:padding="4dp"
                android:src="@drawable/icon_reset"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Reset counter" />

            <!-- History icon -->
            <ImageView
                android:id="@+id/btnHistory"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_background"
                android:padding="4dp"
                android:src="@drawable/icon_main"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="View counter history" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Counter display area with border as shown in screenshot -->
    <LinearLayout
        android:id="@+id/counterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/counter_border"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp">

        <!-- Counter value -->

        <!-- Tap to count hint -->
        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/appwidget_text"
            android:text="300"
            android:textAlignment="center"
            android:textColor="#888888"
            android:textSize="44sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTapHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to count"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#888888" />
    </LinearLayout>
</RelativeLayout>